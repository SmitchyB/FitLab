<Page x:Class="FitLab.Pages.MyBodyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="MyBodyPage">

    <ScrollViewer>
        <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">

            <!-- Basic Info -->
            <GroupBox Header="Basic Information" Margin="0,0,0,10"
                      Foreground="#9a42ff" BorderThickness="1">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtName" Margin="5" Width="300" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Height:" VerticalAlignment="Center" Margin="5"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <TextBox x:Name="TxtHeight" Width="60" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CmbHeightUnit" Width="80">
                            <ComboBoxItem Content="cm"/>
                            <ComboBoxItem Content="feet/in"/>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Weight:" VerticalAlignment="Center" Margin="5"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <TextBox x:Name="TxtWeight" Width="60" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CmbWeightUnit" Width="80">
                            <ComboBoxItem Content="kg"/>
                            <ComboBoxItem Content="lbs"/>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Date of Birth:" VerticalAlignment="Center" Margin="5"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <DatePicker x:Name="DatePickerDOB" Width="150"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Goals -->
            <GroupBox Header="Goals" Margin="0,0,0,10" Foreground="#9a42ff">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="TxtGoalDescription" Width="300" Margin="0,0,10,0"/>
                        <TextBox x:Name="TxtGoalTimeframe" Width="100"/>
                        <Button Content="Add Goal" Click="BtnAddGoal_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                    <ItemsControl x:Name="GoalsPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Description}" Width="300"/>
                                    <TextBlock Text="{Binding Timeframe}" Width="100" Margin="10,0,0,0"/>
                                    <Button Content="Edit" Tag="{Binding}" Click="BtnEditGoal_Click" Margin="10,0,0,0"/>
                                    <Button Content="Delete" Tag="{Binding}" Click="BtnDeleteGoal_Click" Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </GroupBox>

            <!-- Intake -->
            <GroupBox Header="Intake" Foreground="#9a42ff" Margin="0,0,0,10">
                <StackPanel>

                    <!-- Date Picker -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Select Date for Food &amp; Water:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#9a42ff" />
                        <DatePicker x:Name="DatePickerSelectedDate"
                                    SelectedDateChanged="DatePickerSelectedDate_SelectedDateChanged"/>
                    </StackPanel>

                    <!-- Water Intake -->
                    <GroupBox Header="Water Intake"
                              Foreground="#9a42ff"
                              Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnMinusWater"
                                    Content="-"
                                    Width="30"
                                    Height="30"
                                    Margin="5"
                                    Click="BtnMinusWater_Click"/>
                            <TextBlock x:Name="TxtWaterCups"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="10"
                                       Text="0 cups"/>
                            <Button x:Name="BtnPlusWater"
                                    Content="+"
                                    Width="30"
                                    Height="30"
                                    Margin="5"
                                    Click="BtnPlusWater_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Food Intake -->
                    <GroupBox Header="Food Intake"
                              Foreground="#9a42ff"
                              Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <ComboBox x:Name="CmbMealTime" Width="100" Margin="0,0,5,0">
                                    <ComboBoxItem Content="Breakfast"/>
                                    <ComboBoxItem Content="Brunch"/>
                                    <ComboBoxItem Content="Lunch"/>
                                    <ComboBoxItem Content="Snack"/>
                                    <ComboBoxItem Content="Dinner"/>
                                </ComboBox>
                                <TextBox x:Name="TxtDescription" Width="150" Margin="0,0,5,0"/>
                                <TextBox x:Name="TxtPortionSize" Width="80" Margin="0,0,5,0"/>
                                <TextBox x:Name="TxtCalories" Width="60" Margin="0,0,5,0"/>
                                <Button Content="Add Meal" Click="BtnAddMeal_Click"/>
                            </StackPanel>
                            <ItemsControl x:Name="FoodIntakePanel">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#9a42ff" BorderThickness="1" Padding="5" Margin="5">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <StackPanel Width="300">
                                                    <TextBlock Text="{Binding MealTime}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}"/>
                                                    <TextBlock Text="{Binding PortionSize, StringFormat='Portion: {0}'}"/>
                                                    <TextBlock Text="{Binding Calories, StringFormat='Calories: {0}'}"/>
                                                </StackPanel>
                                                <Button Content="Edit" Tag="{Binding}" Click="BtnEditMeal_Click" Margin="2"/>
                                                <Button Content="Delete" Tag="{Binding}" Click="BtnDeleteMeal_Click" Margin="2"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <!-- Before Pictures -->
            <GroupBox Header="Before Pictures" Margin="0,0,0,10" Foreground="#9a42ff">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <GroupBox Header="Frontal" Margin="10,0">
                        <StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                <Image x:Name="ImgFrontalPreview" Height="100" Width="100"/>
                            </Border>
                            <Button Content="Upload" Click="BtnUploadFrontal_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Left Side" Margin="10,0">
                        <StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                <Image x:Name="ImgLeftPreview" Height="100" Width="100"/>
                            </Border>
                            <Button Content="Upload" Click="BtnUploadLeft_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Right Side" Margin="10,0">
                        <StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                <Image x:Name="ImgRightPreview" Height="100" Width="100"/>
                            </Border>
                            <Button Content="Upload" Click="BtnUploadRight_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Back" Margin="10,0">
                        <StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                <Image x:Name="ImgBackPreview" Height="100" Width="100"/>
                            </Border>
                            <Button Content="Upload" Click="BtnUploadBack_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <!-- Weekly Progress Pictures -->
            <GroupBox Header="Weekly Progress Pictures" Margin="0,0,0,10" Foreground="#9a42ff">
                <StackPanel>
                    <!-- Week Selector -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="◀" Width="40" Click="BtnWeekBack_Click"/>
                        <TextBlock x:Name="TxtCurrentWeek" Text="Week 1" FontSize="16" VerticalAlignment="Center" Margin="20,0"/>
                        <Button Content="▶" Width="40" Click="BtnWeekForward_Click"/>
                    </StackPanel>

                    <!-- Progress Pictures -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <GroupBox Header="Frontal" Margin="10,0">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                    <Image x:Name="ImgProgressFrontal" Height="100" Width="100"/>
                                </Border>
                                <Button Content="Upload" Click="BtnUploadProgressFrontal_Click"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Left Side" Margin="10,0">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                    <Image x:Name="ImgProgressLeft" Height="100" Width="100"/>
                                </Border>
                                <Button Content="Upload" Click="BtnUploadProgressLeft_Click"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Right Side" Margin="10,0">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                    <Image x:Name="ImgProgressRight" Height="100" Width="100"/>
                                </Border>
                                <Button Content="Upload" Click="BtnUploadProgressRight_Click"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Back" Margin="10,0">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                                    <Image x:Name="ImgProgressBack" Height="100" Width="100"/>
                                </Border>
                                <Button Content="Upload" Click="BtnUploadProgressBack_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page>
