<Page x:Class="FitLab.Pages.MyBodyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="MyBodyPage">

    <ScrollViewer>
        <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">
            <!-- Basic Information Section -->
            <Border BorderBrush="#9a42ff" BorderThickness="2" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Basic Information" FontSize="20" Foreground="#9a42ff" Margin="0,0,0,10"/>
                    <!-- Name -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Name:" Width="120" VerticalAlignment="Center" Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtName" Width="200" IsReadOnly="True"/>
                    </StackPanel>
                    <!-- Gender -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Gender:" Width="120" VerticalAlignment="Center" Foreground="#9a42ff"/>
                        <ComboBox x:Name="CmbGender" Width="150" SelectionChanged="CmbGender_SelectionChanged" IsEnabled="False">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                            <ComboBoxItem Content="Trans-Feminine"/>
                            <ComboBoxItem Content="Trans-Masculine"/>
                        </ComboBox>
                        <CheckBox x:Name="ChkOnHormones" Content="On Hormones" Visibility="Collapsed" Margin="10,0,0,0" Foreground="#9a42ff"/>
                    </StackPanel>
                    <!-- Date of Birth -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Date of Birth:" Width="120" VerticalAlignment="Center" Foreground="#9a42ff"/>
                        <DatePicker x:Name="DatePickerDOB" IsEnabled="False"/>
                    </StackPanel>
                    <!-- Height -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Height:" Width="120" VerticalAlignment="Center" Foreground="#9a42ff"/>
                        <ComboBox x:Name="CmbHeightUnit" Width="120" SelectionChanged="CmbHeightUnit_SelectionChanged" Margin="0,0,10,0">
                            <ComboBoxItem Content="Centimeters"/>
                            <ComboBoxItem Content="Inches"/>
                            <ComboBoxItem Content="Feet/Inches"/>
                        </ComboBox>
                        <!-- Single Input -->
                        <StackPanel x:Name="PanelSingleInput" Orientation="Horizontal" Visibility="Collapsed">
                            <TextBox x:Name="TxtHeightPrimary" Width="100" IsReadOnly="True"/>
                        </StackPanel>
                        <!-- Feet/Inches Inputs -->
                        <StackPanel x:Name="PanelFeetInches" Orientation="Horizontal" Visibility="Collapsed">
                            <TextBlock Text="Feet:" Width="40" VerticalAlignment="Center" Foreground="#9a42ff"/>
                            <TextBox x:Name="TxtHeightFeet" Width="50" Margin="5,0" IsReadOnly="True"/>
                            <TextBlock Text="Inches:" Width="50" VerticalAlignment="Center" Foreground="#9a42ff"/>
                            <TextBox x:Name="TxtHeightInches" Width="50" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnEdit" Content="Edit" Margin="0,0,10,0" Click="BtnEdit_Click"/>
                        <Button x:Name="BtnUpdate" Content="Update" Visibility="Collapsed" Click="BtnUpdate_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Weight Section -->
            <Border BorderBrush="#9a42ff"
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,10,0,0"
                Padding="10">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                    <!-- Section Header -->
                    <TextBlock Text="Weight Tracking"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#9a42ff"
                   Margin="0,0,0,5"/>
                    <!-- Unit Selector -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Display Unit:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#9a42ff"/>
                        <ComboBox x:Name="CmbWeightUnit" Width="100" SelectedIndex="0">
                            <ComboBoxItem>Lbs</ComboBoxItem>
                            <ComboBoxItem>Kilograms</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <!-- Starting Weight -->
                    <TextBlock x:Name="TxtStartingWeight"
                       FontSize="16"
                       FontWeight="Bold"
                       Text="Starting Weight: Not Recorded"
                       Margin="0,5,0,0"
                       Foreground="#9a42ff"/>
                    <!-- Week Navigation -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="BtnWeekBack" Content="&lt;" Width="30" Click="BtnWeightWeekBack_Click"/>
                        <TextBlock x:Name="TxtCurrentWeek" Text="Week 0" Margin="10,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="#9a42ff"/>
                        <Button x:Name="BtnWeekForward" Content="&gt;" Width="30" Click="BtnWeightWeekForward_Click"/>
                    </StackPanel>
                    <!-- Weekly Weight Input -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Weight:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtWeeklyWeight" Width="100"/>
                    </StackPanel>
                    <Button x:Name="BtnWeightSave"
                        Content="Save Weight"
                        Visibility="Collapsed"
                        Click="BtnWeightSave_Click"
                        Margin="0,5,0,0"
                        Width="100"/>
                </StackPanel>
            </Border>
            <!-- Body Measurements -->
            <Border BorderThickness="1" BorderBrush="#9a42ff" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                <StackPanel x:Name="PanelMeasurements">
                    <TextBlock Text="Weekly Body Measurements" FontSize="18" FontWeight="Bold" Foreground="#9a42ff" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="⟵" Width="30" Click="BtnMeasurementWeekBack_Click"/>
                        <TextBlock x:Name="TxtMeasurementWeek" Text="Week 0" Foreground="#9a42ff" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>

                        <Button Content="⟶" Width="30" Margin="10,0,0,0" Click="BtnMeasurementWeekForward_Click"/>

                        <ComboBox x:Name="CmbMeasurementUnit" Width="100" Margin="15,0,0,0" SelectionChanged="CmbMeasurementUnit_SelectionChanged">
                            <ComboBoxItem Content="Inches" IsSelected="True"/>
                            <ComboBoxItem Content="Centimeters"/>
                        </ComboBox>
                    </StackPanel>
                    <!-- Basic Inputs -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Chest - Measure around the fullest part of your chest, keeping the tape level." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtChest" Margin="0,2,0,10"/>

                        <TextBlock Text="Waist - Measure around your natural waistline, typically above your belly button." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtWaist" Margin="0,2,0,10"/>

                        <TextBlock Text="Hips - Measure around the widest part of your hips/glutes." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtHips" Margin="0,2,0,10"/>
                    </StackPanel>

                    <!-- Advanced Toggle -->
                    <CheckBox x:Name="ChkAdvancedMeasurements" Content="Advanced Measurement Tracking" Foreground="#9a42ff" Margin="0,0,0,10" Checked="ChkAdvancedMeasurements_Checked" Unchecked="ChkAdvancedMeasurements_Unchecked"/>

                    <!-- Advanced Section -->
                    <StackPanel x:Name="PanelAdvancedMeasurements" Visibility="Collapsed">
                        <TextBlock Text="Neck - Measure around the middle of the neck." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtNeck" Margin="0,2,0,10"/>

                        <TextBlock Text="Shoulders - Measure around the widest part of the shoulders." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtShoulders" Margin="0,2,0,10"/>

                        <TextBlock Text="Upper Arm - Measure around the thickest part of your bicep with arm relaxed." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtUpperArm" Margin="0,2,0,10"/>

                        <TextBlock Text="Forearm - Measure around the largest part of your forearm." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtForearm" Margin="0,2,0,10"/>

                        <TextBlock Text="Wrist - Measure just above the wrist bone." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtWrist" Margin="0,2,0,10"/>

                        <TextBlock Text="Thigh - Measure around the top of your thigh just below the groin." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtThigh" Margin="0,2,0,10"/>

                        <TextBlock Text="Calf - Measure the thickest part of your calf." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtCalf" Margin="0,2,0,10"/>

                        <TextBlock Text="Ankle - Measure just above the ankle bone." Foreground="#9a42ff"/>
                        <TextBox x:Name="TxtAnkle" Margin="0,2,0,10"/>
                    </StackPanel>

                    <Button x:Name="BtnMeasurementSave" Content="Save Measurements" Margin="0,10,0,0" Background="#9a42ff" Foreground="White" Click="BtnMeasurementSave_Click"/>
                </StackPanel>
            </Border>
            <!-- Section: Goals -->
            <Border BorderBrush="#9a42ff" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Your Goals" FontSize="20" Foreground="#9a42ff" Margin="0,0,0,10" TextAlignment="Center"/>
                    <ListBox x:Name="GoalsList" Height="150" Foreground="#9a42ff">
                    </ListBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Edit Selected" Width="120" Margin="5,0" Click="EditGoal"/>
                        <Button Content="Delete Selected" Width="120" Margin="5,0" Click="DeleteGoal"/>
                        <Button Content="Mark Completed" Width="120" Margin="5,0" Click="CompleteGoal"/>
                    </StackPanel>
                    <TextBlock Text="Add or Update Goal:" FontSize="14" Foreground="#9a42ff" Margin="0,10,0,2"/>
                    <TextBox x:Name="TxtGoalDescription" Width="300" Margin="0,0,0,5" HorizontalAlignment="Left"/>
                    <TextBlock Text="Timeframe:" FontSize="12" Foreground="#9a42ff"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox x:Name="TxtGoalTimeframeAmount" Width="60" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CmbGoalTimeframeUnit" Width="140">
                            <ComboBoxItem>Day(s)</ComboBoxItem>
                            <ComboBoxItem>Week(s)</ComboBoxItem>
                            <ComboBoxItem>Month(s)</ComboBoxItem>
                            <ComboBoxItem>Year(s)</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <Button x:Name="BtnAddOrUpdateGoal" Content="Add Goal" Width="100" Margin="0,10,0,0" Click="AddOrUpdateGoal" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Daily Water Intake-->
            <Border BorderBrush="#9a42ff" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Daily Water Intake" FontSize="18" FontWeight="Bold" Foreground="#9a42ff" Margin="0,0,0,8"/>

                    <!-- Day navigator (replaces DatePicker) -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                        <Button x:Name="BtnDayBack" Content="◀" Width="32" Height="28" Click="BtnDayBack_Click"/>
                        <TextBlock x:Name="TxtDayLabel"
                                   Text="Day 1"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="LightGray"
                                   Margin="8,0"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="BtnDayForward" Content="▶" Width="32" Height="28" Click="BtnDayForward_Click"/>
                        <TextBlock x:Name="TxtEditHint"
                                   Text=""
                                   FontSize="12"
                                   Foreground="LightGray"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Cup Counter -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnWaterDec" Content="-" Width="30" Click="BtnWaterDec_Click"/>
                        <TextBlock x:Name="TxtWaterCups"
                                   Text="0 Cup(s)"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="10,0"
                                   Foreground="#9a42ff"/>
                        <Button x:Name="BtnWaterInc" Content="+" Width="30" Click="BtnWaterInc_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Daily Food Intake Section -->
            <Border BorderBrush="#9a42ff" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Daily Food Intake" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#9a42ff"/>
                    <!-- Date Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="◀" Width="30" Click="BtnFoodDateBack_Click"/>
                        <DatePicker x:Name="DatePickerFoodDate" SelectedDateChanged="DatePickerFoodDate_SelectedDateChanged" Width="150" Margin="5,0"/>
                        <Button Content="▶" Width="30" Click="BtnFoodDateForward_Click"/>
                    </StackPanel>
                    <!-- Existing Meals List -->
                    <ListBox x:Name="ListMeals" Margin="0,0,0,10" Height="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding MealTime}" Margin="0,0,0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Dishes.Count, StringFormat={}{0} Dish(es)}" FontStyle="Italic" Margin="0,0,0,5"/>
                                        <!-- Dishes List -->
                                        <ItemsControl ItemsSource="{Binding Dishes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Expander Header="{Binding DishName}" Margin="0,0,0,5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding PortionSize, StringFormat=Portion: {0}}"/>
                                                            <TextBlock Text="{Binding Ingredients, StringFormat=Ingredients: {0}}"/>
                                                            <TextBlock Text="{Binding Calories, StringFormat=Calories: {0}}"/>
                                                        </StackPanel>
                                                    </Expander>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <!-- Buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Button Content="Edit" Width="50" Margin="0,0,5,0" Click="BtnEditMeal_Click"/>
                                            <Button Content="Delete" Width="50" Click="BtnDeleteMeal_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- Add Meal Button -->
                    <Button Content="Add Meal" Width="100" Click="BtnShowAddMeal_Click" Margin="0,0,0,10"/>
                    <!-- Add/Edit Meal Section -->
                    <StackPanel x:Name="PanelAddMeal" Visibility="Collapsed">
                        <!-- Meal Time Dropdown -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Meal Time:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#9a42ff"/>
                            <ComboBox x:Name="CmbMealTime" Width="150">
                                <ComboBoxItem Content="Breakfast"/>
                                <ComboBoxItem Content="Brunch"/>
                                <ComboBoxItem Content="Lunch"/>
                                <ComboBoxItem Content="Snack"/>
                                <ComboBoxItem Content="Dinner"/>
                                <ComboBoxItem Content="Dessert"/>
                            </ComboBox>
                        </StackPanel>
                        <!-- Dishes List -->
                        <ItemsControl x:Name="PanelDishes">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#9a42ff" BorderThickness="1" Padding="5" Margin="0,0,0,5">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Dish Name:" Width="70" Foreground="#9a42ff"/>
                                                <TextBox Width="150" Text="{Binding DishName, Mode=TwoWay}"/>
                                                <Button Content="-" Width="30" Margin="5,0,0,0" Click="BtnRemoveDish_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Portion:" Width="70" Foreground="#9a42ff"/>
                                                <TextBox Width="150" Text="{Binding PortionSize, Mode=TwoWay}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Ingredients:" Width="70" Foreground="#9a42ff"/>
                                                <TextBox Width="150" Text="{Binding Ingredients, Mode=TwoWay}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Calories:" Width="70" Foreground="#9a42ff"/>
                                                <TextBox Width="150" Text="{Binding Calories, Mode=TwoWay}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <!-- Add Dish Button -->
                        <Button Content="Add Dish" Width="100" Margin="0,0,0,10" Click="BtnAddDish_Click"/>
                        <!-- Save Meal Button -->
                        <Button Content="Save Meal" Width="100" Click="BtnSaveMeal_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Weekly Progress Pictures Section -->
            <Border BorderBrush="#9a42ff" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <!-- Section Header -->
                    <TextBlock Text="Weekly Progress Pictures" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#9a42ff"/>
                    <!-- BEFORE PICTURES -->
                    <TextBlock Text="Before Pictures:" FontSize="14" Margin="0,0,0,5" Foreground="#9a42ff"/>
                    <WrapPanel x:Name="PanelBeforePictures" Margin="0,0,0,10"></WrapPanel>
                    <!-- CURRENT WEEK PICTURES -->
                    <TextBlock Text="Weekly Progress Pictures:" FontSize="14" Margin="0,0,0,5" Foreground="#9a42ff"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                        <Button Content="◀" Width="30" Click="BtnPictureWeekBack_Click"/>
                        <TextBlock x:Name="TxtCurrentPictureWeek" Text="Week 0" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" Foreground="#9a42ff"/>
                        <Button Content="▶" Width="30" Click="BtnPictureWeekForward_Click"/>
                    </StackPanel>
                    <!-- Picture Upload Buttons and Picture Previews-->
                    <WrapPanel x:Name="PanelCurrentWeekPictures">
                        <StackPanel Margin="5">
                            <Button x:Name="BtnUploadFrontal" Content="Upload Frontal" Width="120" Height="30" Click="BtnUploadFrontal_Click"/>
                            <Image x:Name="ImgFrontalPreview" Width="120" Height="120" Stretch="Uniform" Visibility="Collapsed" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Button x:Name="BtnUploadLeft" Content="Upload Left" Width="120" Height="30" Click="BtnUploadLeft_Click"/>
                            <Image x:Name="ImgLeftPreview" Width="120" Height="120" Stretch="Uniform" Visibility="Collapsed" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Button x:Name="BtnUploadRight" Content="Upload Right" Width="120" Height="30" Click="BtnUploadRight_Click"/>
                            <Image x:Name="ImgRightPreview" Width="120" Height="120" Stretch="Uniform" Visibility="Collapsed" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Button x:Name="BtnUploadBack" Content="Upload Back" Width="120" Height="30" Click="BtnUploadBack_Click"/>
                            <Image x:Name="ImgBackPreview" Width="120" Height="120" Stretch="Uniform" Visibility="Collapsed" Margin="0,5,0,0"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
