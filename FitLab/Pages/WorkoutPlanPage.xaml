<Page x:Class="FitLab.Pages.WorkoutPlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FitLab.Pages"
      xmlns:components="clr-namespace:FitLab.Components"
      Background="Black">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Workout Plan"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#9a42ff"
                   Margin="0,0,0,10" />

        <!-- Control Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Grid.Row="0"
               Text="Cycle Length:"
               FontSize="12"
               FontWeight="Bold"
               Foreground="#9a42ff"
               Margin="0,0,10,5" 
               TextAlignment="Center"/>
            <ComboBox x:Name="CycleLengthDropdown"
                      Width="60"
                      IsEnabled="False"
                      SelectionChanged="CycleLengthDropdown_SelectionChanged"
                      Foreground="#9a42ff" Background="Black" BorderBrush="#9a42ff"
                      Margin="0,0, 10, 5">
                <ComboBoxItem>7</ComboBoxItem>
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem>14</ComboBoxItem>
            </ComboBox>

            <Button x:Name="SaveButton"
                    Content="Save"
                    Visibility="Collapsed"
                    Margin="10,0"
                    Padding="10,2"
                    Click="SaveButton_Click" />

            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Visibility="Collapsed"
                    Margin="0,0,10,0"
                    Padding="10,2"
                    Click="CancelButton_Click" />

            <Button x:Name="EditButton"
                    Content="Edit"
                    Padding="10,2"
                    Click="EditButton_Click" />
        </StackPanel>

        <!-- Scrollable Plan List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="DailyPlanItems"/>
        </ScrollViewer>
    </Grid>
</Page>

