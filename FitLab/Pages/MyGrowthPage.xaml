<Page x:Class="FitLab.Pages.MyGrowthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyGrowthPage"
      Background="Transparent">


    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16" Orientation="Vertical">

                <!-- Weight (collapsible) -->
                <Expander IsExpanded="True">
                    <Expander.Header>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="Weight"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#9a42ff"
                                       Margin="0,0,12,0"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                <TextBlock Text="Unit:" VerticalAlignment="Center" Foreground="#ddd" Margin="8,0,4,0"/>
                                <ComboBox x:Name="CmbWeightUnit" Width="90" SelectedIndex="0" VerticalAlignment="Center" Margin="0,0,8,0">
                                    <ComboBoxItem Content="Lbs"/>
                                    <ComboBoxItem Content="Kg"/>
                                </ComboBox>

                                <TextBlock Text="Bucket:" VerticalAlignment="Center" Foreground="#ddd" Margin="12,0,4,0"/>
                                <ComboBox x:Name="CmbWeightBucket" Width="110" SelectedIndex="1" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Weekly"/>
                                    <ComboBoxItem Content="Monthly"/>
                                </ComboBox>
                            </StackPanel>
                        </DockPanel>
                    </Expander.Header>

                    <!-- single Content: chart + caption stacked -->
                    <StackPanel>
                        <Border BorderBrush="#9a42ff" BorderThickness="1" CornerRadius="6" Background="#1d1d1d" Padding="12" Margin="0,8,0,0">
                            <Grid>
                                <Canvas x:Name="WeightChartCanvas" Height="280" Background="#151515"/>
                                <TextBlock x:Name="TxtWeightEmpty" Text="No weight data yet."
                                           Foreground="#aaa" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Right">
                            <TextBlock x:Name="TxtWeightBucketLabel" Foreground="#aaa" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtWeightUnitLabel" Foreground="#aaa"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- more sections later -->

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
