<UserControl x:Class="FitLab.Components.CompleteExModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Border Background="#333" Padding="20" CornerRadius="10">
        <StackPanel x:Name="ModalRoot" Width="300" VerticalAlignment="Top">
            <TextBlock x:Name="TxtName" Foreground="White" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtType" Foreground="White" FontSize="14"/>
            <TextBlock x:Name="TxtSection" Foreground="White" FontSize="14" Margin="0,0,0,10"/>

            <StackPanel x:Name="InputPanel" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Complete" Click="Complete_Click" Margin="0,0,5,0"/>
                <Button Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
